{% block contenido %}
    <div class="col col-md-6">
        <h1>Edici√≥n de Cliente</h1>

        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" value="Edit" />
        {{ form_end(edit_form) }}

        <ul>
            <li>
                <a href="{{ path('cliente_index') }}">Back to the list</a>
            </li>
            <li>
